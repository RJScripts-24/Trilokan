# ===========================================
# TRILOKAN BACKEND - UNIFIED ENVIRONMENT CONFIGURATION
# ===========================================
# This single .env file configures all services in the backend
# Copy this file to .env and update with your actual values

# ===========================================
# API GATEWAY CONFIGURATION
# ===========================================

# Server Configuration
NODE_ENV=development
PORT=3000
CLIENT_URL=http://localhost:5173

# Database Configuration (Neon PostgreSQL Cloud)
# Replace with your actual Neon connection string
DATABASE_URL=postgresql://user:password@ep-xxxxx.region.aws.neon.tech/dbname?sslmode=require

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_ACCESS_EXPIRATION_MINUTES=30
JWT_REFRESH_EXPIRATION_DAYS=30

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM="TrustGuard Support <noreply@trustguard.com>"

# ===========================================
# ML SERVICES CONFIGURATION
# ===========================================

# Complaint/Grievance ML Service
ML_COMPLAINT_PORT=5000
ML_COMPLAINT_URL=http://localhost:5000
ML_COMPLAINT_API_KEY=dev-api-key-complaint-service

# Identity Verifier Service
ML_IDENTITY_PORT=5002
ML_IDENTITY_URL=http://localhost:5002
ML_IDENTITY_API_KEY=dev-api-key-identity-verifier

# App Crawler Service
ML_APP_CRAWLER_PORT=5001
ML_APP_CRAWLER_URL=http://localhost:5001
ML_APP_CRAWLER_API_KEY=dev-api-key-app-crawler

# App Crawler Configuration
SCAN_INTERVAL_SECONDS=600
REPORTING_API_URL=http://localhost:3000/api/v1/threats/report
TIMEOUT=10

# ML Model Configuration (optional)
# MODEL_PATH=./models
# USE_GPU=false
# PHASE2_MODEL=xception

# Legacy ML Service (backward compatibility)
ML_SERVICE_URL=http://localhost:5000
ML_SERVICE_API_KEY=dev-api-key
